# Picovoice Access Key (get from https://console.picovoice.ai/)
# Not required if using openWakeWord
PICOVOICE_ACCESS_KEY=your_access_key_here

# SillyTavern WebSocket URL
SILLYTAVERN_WS_URL=ws://localhost:8000/ws/voice

# Audio input device index (run with --list-devices to see available devices, -1 for auto-detect)
AUDIO_DEVICE_INDEX=-1

# Audio output device index (run with --list-devices to see available devices, -1 for auto-detect)
AUDIO_OUTPUT_DEVICE_INDEX=-1

# Preferred audio device patterns for auto-detection (comma-separated regex patterns)
# Default patterns match Beyerdynamic Space Max on Windows/PulseAudio and ALSA
# PREFERRED_AUDIO_DEVICE_PATTERNS=space.*max,beyerdynamic,CARD=.*MAX

# Wake word engine: "porcupine" (default) or "openwakeword"
WAKEWORD_ENGINE=porcupine

# Wake word sensitivity (0.0 to 1.0, higher = more sensitive)
WAKE_WORD_SENSITIVITY=0.5

# Path to wake word files directory
# For Porcupine: .ppn files
# For openWakeWord: .onnx or .tflite files (leave empty for pre-trained models)
WAKEWORDS_DIR=./wakewords

# Path to data directory (for SQLite database)
DATA_DIR=./data

# OpenWakeWord specific settings (only used when WAKEWORD_ENGINE=openwakeword)
# OPENWAKEWORD_PYTHON_PATH=python3
# OPENWAKEWORD_VAD_THRESHOLD=0.0
# OPENWAKEWORD_NOISE_SUPPRESSION=false
